<div class="flex flex-col w-full mx-auto px-4 sm:px-6 pt-5">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table id="admin-checkouts-table" class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Image
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Name
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Rating
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Price
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Created by
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">Edit</span>
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">Delete</span>
            </th>
          </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
          <% @products.each_with_index do |item, index| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-16 w-16">
                    <% if item.image.attached? %>
                      <%= image_tag item.image, class: "h-full w-full" %>
                    <% else %>
                      <img class="h-full w-full" src="https://images.unsplash.com/photo-1593642632823-8f785ba67e45?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1189&q=80" alt="">
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-2 whitespace-nowrap">
                <%= item.name %>
              </td>
              <td class="px-6 py-2 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= item.rating %></div>
              </td>
              <td class="px-6 py-2 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= item.price %>
                </div>
              </td>
              <td class="px-6 py-2 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= item.user.name %>
                </div>
              </td>
              <td class="px-6 py-2 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Edit", edit_admin_product_path(item.id), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
              <td class="px-6 py-2 whitespace-nowrap text-left text-sm font-medium">
                <%= link_to "Delete", admin_product_path(item.id), method: :delete, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= paginate @products %>
</div>
