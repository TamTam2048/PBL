<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>

<div class="flex" x-data="setup()">
  <!-- sidebar -->
  <div class="w-62 bg-white">
    <div class="flex items-center justify-center mt-10">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd" />
        <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z" />
      </svg>
    </div>
    <nav class="">
      <a
        class="flex cursor-pointer items-center mt-5 py-2 px-8 border-r-4 border-white hover:bg-indigo-400 hover:text-white hover:border-indigo-700"
        :class="activeTab===0 ? 'bg-indigo-400 text-white border-indigo-700' :  'text-gray-600'" @click="handleChangeTab(0)"
      >
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M19 11H5M19 11C20.1046 11 21 11.8954 21 13V19C21 20.1046 20.1046 21 19 21H5C3.89543 21 3 20.1046 3 19V13C3 11.8954 3.89543 11 5 11M19 11V9C19 7.89543 18.1046 7 17 7M5 11V9C5 7.89543 5.89543 7 7 7M7 7V5C7 3.89543 7.89543 3 9 3H15C16.1046 3 17 3.89543 17 5V7M7 7H17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="mx-4 font-medium">Dashboard</span>
      </a>

      <a
        class="flex cursor-pointer items-center mt-5 py-2 px-8 border-r-4 border-white hover:bg-indigo-400 hover:text-white hover:border-indigo-700"
        :class="activeTab===1 ? 'bg-indigo-400 text-white border-indigo-700' : 'text-gray-600'" @click="handleChangeTab(1)"
      >
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M16 7C16 9.20914 14.2091 11 12 11C9.79086 11 8 9.20914 8 7C8 4.79086 9.79086 3 12 3C14.2091 3 16 4.79086 16 7Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M12 14C8.13401 14 5 17.134 5 21H19C19 17.134 15.866 14 12 14Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="mx-4 font-medium">Profile</span>
      </a>

      <a
        class="flex cursor-pointer items-center mt-5 py-2 px-8 border-r-4 border-white hover:bg-indigo-400 hover:text-white hover:border-indigo-700"
        :class="activeTab===2 ? 'bg-indigo-400 text-white border-indigo-700' : 'text-gray-600'" @click="handleChangeTab(2)"
      >
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 5V7M15 11V13M15 17V19M5 5C3.89543 5 3 5.89543 3 7V10C4.10457 10 5 10.8954 5 12C5 13.1046 4.10457 14 3 14V17C3 18.1046 3.89543 19 5 19H19C20.1046 19 21 18.1046 21 17V14C19.8954 14 19 13.1046 19 12C19 10.8954 19.8954 10 21 10V7C21 5.89543 20.1046 5 19 5H5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="mx-4 font-medium">Products</span>
      </a>
    </nav>

    <div class="absolute cursor-pointer bottom-0 my-10">
      <a class="flex items-center py-2 px-8 text-gray-500 hover:text-gray-600" href="#">
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M18 10C18 14.4183 14.4183 18 10 18C5.58172 18 2 14.4183 2 10C2 5.58172 5.58172 2 10 2C14.4183 2 18 5.58172 18 10ZM10 7C9.63113 7 9.3076 7.19922 9.13318 7.50073C8.85664 7.97879 8.24491 8.14215 7.76685 7.86561C7.28879 7.58906 7.12543 6.97733 7.40197 6.49927C7.91918 5.60518 8.88833 5 10 5C11.6569 5 13 6.34315 13 8C13 9.30622 12.1652 10.4175 11 10.8293V11C11 11.5523 10.5523 12 10 12C9.44773 12 9.00001 11.5523 9.00001 11V10C9.00001 9.44772 9.44773 9 10 9C10.5523 9 11 8.55228 11 8C11 7.44772 10.5523 7 10 7ZM10 15C10.5523 15 11 14.5523 11 14C11 13.4477 10.5523 13 10 13C9.44772 13 9 13.4477 9 14C9 14.5523 9.44772 15 10 15Z" fill="currentColor"/>
        </svg>
        <span class="mx-4 font-medium">Support</span>
      </a>
    </div>
  </div>

  <!-- product table -->
  <div x-show="activeTab===1" class="flex flex-col w-full mx-auto px-4 sm:px-6 pt-5">
  </div>
  <div x-show="activeTab===2" id="product-table" class="flex flex-col w-full mx-auto px-4 sm:px-6 pt-5">
    <%= render "users/product_table" %>
  </div>
</div>
<%= javascript_pack_tag 'user_tabs', 'data-turbolinks-track': 'reload' %>
