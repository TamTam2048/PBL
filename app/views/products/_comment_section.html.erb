<% @product.reviews.each_with_index do |review, index| %>
  <div class="flex pb-8">
    <div class="flex-shrink-0 mr-3">
      <img class="mt-2 rounded-full w-8 h-8 sm:w-10 sm:h-10" src="https://images.unsplash.com/photo-1604426633861-11b2faead63c?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=200&h=200&q=80" alt="">
    </div>
    <div class="flex-1 border border-gray-400 rounded-lg px-4 py-2 sm:px-6 sm:py-4 leading-relaxed">
      <div class="mb-px">
        <strong class="mr-2"><%= review.user.name %></strong><span class="text-xs text-gray-400">3:34 PM</span>
      </div>
      <div id="comment-rating-<%= index %>" class="flex flex-row h-4 w-4 mb-2"></div>
      <p class="text-sm">
        <%= review.content %>
      </p>
    </div>
  </div>
  <script>
      $('#comment-rating-<%= index %>').raty({
          size     : 10,
          starOff: '<%= image_path "star-off.svg" %>',
          starOn : '<%= image_path "star-on.svg" %>',
          half: false,
          readOnly: true,
          score: <%= review.rating %>,
      });
      $('#comment-rating-<%= index %>').raty.reload();
  </script>
<% end %>
