<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Workflow">
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign in here
      </h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
      <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email, class: "block border border-grey-light w-full p-3 rounded mb-4"  %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, class: "block border border-grey-light w-full p-3 rounded mb-4" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between pt-6 pb-6">
          <div class="flex items-center">
            <%= form.label :remember_me, class: "ml-2 block text-sm text-gray-900 items-center" do %>
              <%= form.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
              <span>Remember me</span>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="pt-2 w-full flex flex-col gap-2">
        <%= form.submit "Sign In", class: "cursor-pointer rounded bg-indigo-600 text-white p-2 flex flex-row justify-center hover:bg-green-dark gap-2 items-center duration-100 ease-in-out" %>
        <%= link_to(user_google_oauth2_omniauth_authorize_path, html_options={method: :post,class: "rounded bg-red-500 text-white w-full p-2 flex flex-row justify-center gap-2 items-center hover:bg-red-600 duration-100 ease-in-out"}) do %>
          <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="w-5" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24"><g fill="none"><path fill-rule="evenodd" clip-rule="evenodd" d="M12 0C5.372 0 0 5.373 0 12s5.372 12 12 12c6.627 0 12-5.373 12-12S18.627 0 12 0zm.14 19.018c-3.868 0-7-3.14-7-7.018c0-3.878 3.132-7.018 7-7.018c1.89 0 3.47.697 4.682 1.829l-1.974 1.978v-.004c-.735-.702-1.667-1.062-2.708-1.062c-2.31 0-4.187 1.956-4.187 4.273c0 2.315 1.877 4.277 4.187 4.277c2.096 0 3.522-1.202 3.816-2.852H12.14v-2.737h6.585c.088.47.135.96.135 1.474c0 4.01-2.677 6.86-6.72 6.86z" fill="currentColor"/></g></svg>
          Sign-in with Google
        <% end %>
        <%= link_to(user_facebook_omniauth_authorize_path, html_options={method: :post, class: "rounded bg-blue-600 text-white w-full p-2 flex flex-row justify-center gap-2 items-center hover:bg-blue-700 duration-100 ease-in-out"}) do %>
          <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="w-5" preserveAspectRatio="xMidYMid meet" viewBox="0 0 1024 1024"><path d="M880 112H144c-17.7 0-32 14.3-32 32v736c0 17.7 14.3 32 32 32h736c17.7 0 32-14.3 32-32V144c0-17.7-14.3-32-32-32zm-92.4 233.5h-63.9c-50.1 0-59.8 23.8-59.8 58.8v77.1h119.6l-15.6 120.7h-104V912H539.2V602.2H434.9V481.4h104.3v-89c0-103.3 63.1-159.6 155.3-159.6c44.2 0 82.1 3.3 93.2 4.8v107.9z" fill="currentColor"/></svg>
          Sign-in with Facebook
        <% end %>
      </div>
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= link_to "Don't have any accounts ? Sign up", new_user_registration_path, class: "ml-2 block text-sm text-gray-900" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

