<div class="relative bg-white">
  <div class="max-w-10xl mx-auto ">
    <div class="flex justify-between items-center border-b-2 border-gray-100 px-4 sm:px-8 py-4 md:justify-start md:space-x-10">
      <div class="flex justify-start lg:w-0 lg:flex-1">
        <%= link_to admin_root_url do %>
          <span class="sr-only">Workflow</span>
          <span class="h-8 w-auto sm:h-10">Home</span>
        <% end %>
      </div>
      <div class="-mr-2 -my-2 md:hidden">
        <button type="button" class="bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" aria-expanded="false">
          <span class="sr-only">Open menu</span>
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      <!-- trailing items -->
      <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
        <!-- Authentication -->
        <div class="relative inline-block ml-6">
          <% if user_signed_in? %>
            <div>
              <button type="button" onclick="handleDisplayProfileDropdown()" class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" id="menu-button" aria-expanded="true" aria-haspopup="true">
                <%= current_user.name %>
                <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
            <div id="profile-dropdown" class="origin-top-right absolute right-0 z-10 mt-2 w-40 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1" style="display: none">
              <div class="z-10 py-1" role="none">
                <%= link_to "Profile", user_path(current_user), class: "text-gray-700 block px-4 py-2 text-sm hover:bg-indigo-500 hover:text-white", role: "menuitem", tabindex: "-1", id: "menu-item-0" %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "text-gray-700 block px-4 py-2 text-sm hover:bg-indigo-500 hover:text-white", role: "menuitem", id: "menu-item-1" %>
              </div>
            </div>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, class: "whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900 cursor-pointer" %>
            <%= link_to "Login", new_user_session_path, class: "ml-8 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'header', 'data-turbolinks-track': 'reload' %>
